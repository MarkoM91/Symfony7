{% extends 'base.html.twig' %}

{% block menu %}{% endblock %}

{% block customstylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block main %}
{% if error %}
<div class="alert alert-danger">
    {{  error.messageKey|trans(error.messageData, 'security') }}
</div>
{% endif %}

<form class="form-signin" action="{{ path('login') }}" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only">Email Adress</label>
    <input type="email" name="_email" id="inputEmail" class="form-control" placelholder="Email address" required autofocus>
    <label for="inputPassword" name="_password" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placelholder="Password " required>
    <div class="checkbox mb-3">
        <label for="">
            <input type="checkbox" name="_remember_me">Remember Me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Sign In</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018  <a href="{{ path('main_page') }}">Main Page</a></p>
    <input type="hidden" name="_csrf_token" value="csrf_token('authenticate')">Remember Me
</form>

{% endblock %}

{% block footer_links %}{% endblock %}
